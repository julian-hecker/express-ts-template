{
  "name": "express-typescript-template",
  "version": "1.0.0",
  "description": "Complete template for an Express app using Typescript",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf ./dist",
    "docs": "apidoc -f \".*.routes.ts$\" -i src -o docs",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julian-hecker/express-ts-template.git"
  },
  "author": "Julian Hecker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/julian-hecker/express-ts-template/issues"
  },
  "homepage": "https://github.com/julian-hecker/express-ts-template#readme",
  "apidoc": {
    "name": "Express App",
    "version": "1.0.0",
    "title": "Express App Template API Documentation",
    "description": "Sample Express App Documentation",
    "url": "http://localhost:3000",
    "sampleUrl": "http://localhost:3000"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.2.0",
    "firebase-admin": "^10.0.0",
    "firebase-functions": "^3.16.0",
    "helmet": "^4.6.0",
    "http-errors": "^1.8.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@jest-mock/express": "^1.4.5",
    "@types/apidoc": "^0.50.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/http-errors": "^1.8.1",
    "@types/jest": "^27.0.2",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.11",
    "apidoc": "^0.50.2",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
